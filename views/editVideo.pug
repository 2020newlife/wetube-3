extends layouts/main

block content
    .form-container
        form(name="editVideo", action=`${urls.editVideo}/${video.id}`, method="post")
            input(type="text", name="title", placeholder="Title", value=video.title)
            textarea(name="description", placeholder="description")= video.description
            input(type="submit", value="Edit")
            a.form-container__link.form-container__link--delete(href=`${urls.deleteVideo}/${video.id}`) Delete Video
