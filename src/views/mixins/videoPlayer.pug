mixin videoPlayer(video = {})
    .video__player#jsVideoPlayer
        //- ISSUE: safari에서 재생이 안되어 찾아보니 좀 바뀐듯 함
        //- video(src=video.fileUrl)
        if video
            video
                source(src=`${hostUrl}${video.fileUrl}` type="video/mp4")
                source(src=`${hostUrl}${video.fileUrl}` type="video/webm")
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScreenButton
                    i.fas.fa-expand